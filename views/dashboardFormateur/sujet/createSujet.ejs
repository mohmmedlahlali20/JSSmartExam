
<%- include('../../layouts/navbar.ejs') %>
<div class="container form-container">
    <h1>Create a New Subject</h1>
    <form action="/submit-form" method="POST">
      <div class="mb-3">
        <label for="title" class="form-label">Subject Title</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="Enter subject title" required>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea class="form-control" id="description" name="description" rows="3" placeholder="Enter subject description" required></textarea>
      </div>
      <div class="mb-3">
        <label for="parentSubject" class="form-label">Parent Subject</label>
        <select class="form-select" id="parentSubject" name="parent_id">
          <option value="">Select parent subject (optional)</option>
          <% subjects.forEach(subject => { %>
            <option value="<%= subject.id %>"><%= subject.title %></option>
          <% }) %>
        </select>
      </div>
      <button type="submit" class="btn btn-custom">Create Subject</button>
    </form>
  </div>

 


