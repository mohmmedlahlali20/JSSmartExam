<%- include('../../layouts/navbar.ejs') %>

<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }

    .card:hover {
        transform: scale(1.05);
    }

    .card-title {
        font-size: 1.25rem;
    }

    .card-text {
        color: #6c757d;
    }
</style>

<div class="container mt-5">
    <h1 class="mb-4 text-center">Subjects List</h1>

    <div class="row">
        <div class="col-md-6">
            <h2>Subjects</h2>
            <% subjects.forEach(subject => { %>
                <% if (!subject.parent_id) { %> <!-- Display parent subjects -->
                <div class="col-md-12 mb-4">
                    <div class="card border-0 shadow-sm rounded">
                        <div class="card-body">
                            <h5 class="card-title font-weight-bold"><%= subject.title %></h5>
                            <p class="card-text"><%= subject.description %></p>
                        </div>
                    </div>
                </div>
                <% } %>
            <% }); %>
        </div>

        <div class="col-md-6">
            <h2>Sub Subjects</h2>
            <% subjects.forEach(subject => { %>
                <% if (subject.parent_id) { %> <!-- Display sub-subjects -->
                <div class="col-md-12 mb-4">
                    <div class="card border-0 shadow-sm rounded">
                        <div class="card-body">
                            <h5 class="card-title font-weight-bold"><%= subject.title %></h5>
                            <p class="card-text"><%= subject.description %></p>
                        </div>
                    </div>
                </div>
                <% } %>
            <% }); %>
        </div>
    </div>

    <% if (subjects.length === 0) { %>
        <p class="text-center">No subjects found.</p>
    <% } %>
</div>

<%- include('../../layouts/script.ejs') %>
